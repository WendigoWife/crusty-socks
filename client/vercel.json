{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "routes": [
    { 
      "handle": "filesystem" 
    },
    { 
      "src": "/.*", 
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      },
      "dest": "/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
